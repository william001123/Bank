@model List<Historial>
@{
    ViewData["Title"] = "Historial";
}

<div class="text-center">
    <h1 class="display-4">Transacciones</h1>    
</div>

<div class="row">
    <div class="col-1">
        <a asp-action="Index" asp-controller="Cliente" asp-route-id=@ViewData["IdCliente"] class="btn btn-warning btn-sm">Volver</a>
    </div>
</div>

<br />

<div class="card">
    <div class="card-header">
        Listado de transacciones
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Número Identificación</th>
                    <th>Nombre Completo</th>
                    <th>Fecha Transacción</th>
                    <th>Tipo Transacción</th>
                    <th>Monto</th>
                    <th>Cuenta Destino</th>
                    <th>Descripcción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.numeroIdentificacion</td>
                        <td>@item.nombreCompleto</td>
                        <td>@item.fechaHora</td>
                        <td>@item.tipoTransaccion</td>
                        <td>@item.monto</td>
                        <td>@item.CuentaDestino</td>
                        <td>@item.descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>